rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir leitura pública de vídeos
    match /videos/{document} {
      allow read: if true;
      allow write: if true; // Temporário para demonstração
    }
    // Permitir leitura pública de torneios
    match /tournaments/{document} {
      allow read: if true;
      allow write: if true; // Temporário para demonstração
    }
  }
}